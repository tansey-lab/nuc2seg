params {
   xenium_dir = "${launchDir}/nextflow/tests/data"
   tile_height = 64
   tile_width = 64
   overlap_percentage = 0.25
}

process {
    publishDir = { "${params.outdir}" }

    withName: PREPROCESS {
        ext.args = [
            '--sample-area', '8000,1500,8100,1600'
        ].join(' ')
    }

    withName: TRAIN {
        ext.args = [
            '--epochs', '1',
            '--batch-size', '1',
            '--device', 'cpu',
            '--num-dataloader-workers', '0'
        ].join(' ')
    }

    withName: PREDICT {
        ext.args = [
            '--device', 'cpu',
            '--num-dataloader-workers', '0'
        ].join(' ')
    }
}
