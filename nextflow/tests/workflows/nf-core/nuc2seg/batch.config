params {
   xenium_dir = "${launchDir}/nextflow/tests/data/prostate"
   tile_height = 64
   tile_width = 64
   overlap_percentage = 0.25
   celltyping_n_chains = 3
   sample_area = "2000,2000,2400,2400"
   n_predict_jobs = 1
   segmentation_tile_height = 400
   segmentation_tile_width = 400
   n_celltypes = 3
   resolution = 1
}

process {
    publishDir = { "${params.outdir}" }

    withName: CELLTYPING {
        ext.args = [
            '--min-n-celltypes', '2',
            '--max-n-celltypes', '4',
        ].join(' ')
    }

    withName: PREPROCESS {
        ext.args = [
            '--background-nucleus-distance', '1',
            '--background-transcript-distance', '1',
            '--background-pixel-transcripts', '1'
        ].join(' ')
    }

    withName: TRAIN {
        ext.args = [
            '--epochs', '1',
            '--device', 'cpu',
            '--batch-size', '8',
            '--celltype-loss-factor', '10',
            '--num-dataloader-workers', '0',
            '--val-percent', '0',
            '--no-loss-reweighting'
        ].join(' ')
    }

    withName: PREDICT {
        ext.args = [
            '--device', 'cpu',
            '--num-dataloader-workers', '0'
        ].join(' ')
    }
}
